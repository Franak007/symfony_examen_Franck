{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <h1>Liste des publications : </h1>

        <ul>
            {% for publication in publications %}
                <li><a href="{{ path('app_publication_show', {'id':publication.id}) }}">{{ publication.title }}</a></li>
            {% endfor %}
        </ul>

    </div>
{% endblock %}
